<link rel="stylesheet" href="/css/jobUpdate.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />


<!-- Main Content for Edit Job -->
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <!-- Card with Glass Effect for Form -->
      <div class="edit-job-card p-4 shadow-lg rounded-4 bg-glass">
        <h2 class="text-center text-white mb-4">Edit Job Posting</h2>

        <% if (error) { %>
          <div class="alert alert-danger text-center"><%= error %></div>
        <% } %>

        <!-- Form for Editing Job Posting -->
        <form method="POST" action="/jobs/<%= job.id %>/edit" class="job-form">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group mb-3">
                <label for="jobcategory" class="form-label text-white">Job Category</label>
                <input type="text" id="jobcategory" name="jobcategory" class="form-control" value="<%= job.jobcategory %>" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group mb-3">
                <label for="jobdesignation" class="form-label text-white">Designation</label>
                <input type="text" id="jobdesignation" name="jobdesignation" class="form-control" value="<%= job.jobdesignation %>" required>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group mb-3">
                <label for="joblocation" class="form-label text-white">Location</label>
                <input type="text" id="joblocation" name="joblocation" class="form-control" value="<%= job.joblocation %>" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group mb-3">
                <label for="companyname" class="form-label text-white">Company Name</label>
                <input type="text" id="companyname" name="companyname" class="form-control" value="<%= job.companyname %>" required>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group mb-3">
                <label for="salary" class="form-label text-white">Salary</label>
                <input type="text" id="salary" name="salary" class="form-control" value="<%= job.salary %>" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group mb-3">
                <label for="applyBy" class="form-label text-white">Apply By</label>
                <input type="date" id="applyBy" name="applyBy" class="form-control" value="<%= job.applyBy %>" required>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group mb-3">
                <label for="skills" class="form-label text-white">Skills (comma separated)</label>
                <input type="text" id="skills" name="skills" class="form-control" value="<%= job.skills.join(', ') %>" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group mb-3">
                <label for="openings" class="form-label text-white">Number of Openings</label>
                <input type="number" id="openings" name="openings" class="form-control" value="<%= job.openings %>" required>
              </div>
            </div>
          </div>
          <div class="form-group mb-3">
            <label for="description" class="form-label text-white">Description</label>
            <textarea id="description" name="description" class="form-control" required><%= job.description %></textarea>
          </div>
          <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-lg">
              <i class="bi bi-check-circle-fill me-2 "></i>Update Job
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
