<link rel="stylesheet" href="/css/navbar.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<nav class="navbar navbar-expand-lg navbar-glass shadow-sm px-2 py-1">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold fs-1 text-white" href="/">easily</a> <!-- Made brand larger -->

    <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto align-items-center"> <!-- Jobs & Post Job moved to left -->
        <li class="nav-item"><a class="nav-link" href="/jobs">Jobs</a></li>
        <% if (userName) { %>
          <li class="nav-item"><a class="nav-link" href="/jobs/new">Post Job</a></li>
        <% } %>
      </ul>

      <form class="d-flex search-bar" method="GET" action="/jobs">
        <input class="form-control me-2" type="search" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>" placeholder="Search jobs..." aria-label="Search">
        <button class="btn search-btn" type="submit"><i class="bi bi-search"></i></button>
      </form>

      <ul class="navbar-nav ms-3 align-items-center"> <!-- Right-side links -->
        <% if (userName) { %>
          <li class="nav-item text-light mx-2">Welcome, <%= userName %></li>
          <li class="nav-item">
            <form method="POST" action="/logout" class="d-inline">
              <button class="btn btn-link nav-link logout-btn" type="submit">Logout</button>
            </form>
          </li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
