<link rel="stylesheet" href="/css/applicantDetail.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="applicant-page d-flex align-items-center justify-content-center vh-100">
  <div class="applicant-card p-5 shadow-lg rounded-4 bg-glass text-white w-100" style="max-width: 600px;">
    <h2 class="text-center mb-4">Applicant Details</h2>

    <ul class="list-group list-group-flush mb-4">
      <li class="list-group-item bg-transparent text-white">
        <strong><i class="bi bi-person-fill me-2"></i>Name:</strong> <%= applicant.name %>
      </li>
      <li class="list-group-item bg-transparent text-white">
        <strong><i class="bi bi-envelope-fill me-2"></i>Email:</strong> <%= applicant.email %>
      </li>
      <li class="list-group-item bg-transparent text-white">
        <strong><i class="bi bi-file-earmark-arrow-down-fill me-2"></i>Resume:</strong>
        <a href="/uploads/<%= applicant.resume %>" class="link-warning" target="_blank">Download Resume</a>
      </li>
      <li class="list-group-item bg-transparent text-white">
        <strong><i class="bi bi-clock-fill me-2"></i>Applied At:</strong> <%= applicant.appliedAt.toLocaleString() %>
      </li>
    </ul>

    <div class="text-center">
      <a href="/jobs/<%= job.id %>/applicants" class="btn btn-warning">
        <i class="bi bi-arrow-left me-1"></i>Back to Applicants
      </a>
    </div>
  </div>
</div>
